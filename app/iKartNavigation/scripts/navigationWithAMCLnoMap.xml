<application>
    <name>iKart Navigation with AMCL (No YARP Map)</name>

    <dependencies>
    </dependencies>

    <!-- modules -->
    <module>
       <name>roslaunch</name>
       <parameters>amcl_map_from_ros.launch</parameters>
       <node>ikart</node>
    </module>

    <module>
        <name>roslaunch</name>
        <parameters>robotStatePublisher.launch</parameters>
        <node>ikart</node>
    </module>

    <module>
       <name>yarpdev</name>
       <parameters>--device transformServer --ROS "(enable_ros_publisher 0)" "(enable_ros_subscriber 1)"</parameters>
       <node>ikart-console-linux</node>
    </module>

    <module>
       <name>baseControl</name>
       <parameters>--context baseControl --from baseCtrl_ikartV1.ini --joystick_connect --skip_robot_interface_check</parameters>
       <node>ikart-base</node>
    </module>

    <module>
       <name>joystickCtrl</name>
       <parameters>--context joystickCtrl --from ikart.ini</parameters>
       <node>ikart-base</node>
    </module>

    <module>
       <name>rosrun</name>
       <parameters>map_server map_server ~/slammap.yaml</parameters>
       <node>ikart-base</node>
    </module>

    <module>
       <name>localizationServer</name>
       <parameters>--context localizationServer --from localizationServer.ini</parameters>
       <node>ikart-console-linux</node>
    </module>

    <module>
        <name>robotGoto</name>
        <parameters>--context robotGoto --from robotGoto_ikart.ini</parameters>
        <node>ikart-base</node>
    </module>
    

    <!-- connections --> 
    <connection>
       <from>/robotGoto/control:o</from>
       <to>/baseControl/control:i</to>
       <protocol>udp</protocol>
    </connection>

</application>


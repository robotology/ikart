  <device name="ikart_mc_wrapper" type="controlboardwrapper2" xmlns:xi="http://www.w3.org/2001/XInclude">
      <paramlist name="networks">
      <elem name="wheels">  0 2 0 2 </elem>
      </paramlist>

      <param name="period"> 10            </param>
      <param name="name">   /ikart/wheels </param>
      <param name="ports">  wheels        </param>
      <param name="joints"> 3             </param>

      <action phase="startup" level="5" type="attach">
      <paramlist name="networks">
         <elem name="wheels">  ikart_mc </elem>
      </paramlist>
      </action>

      <action phase="shutdown" level="5" type="detach" />
  </device>

